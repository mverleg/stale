
# of new types, as labels
enum Option[T] {
    struct Some[T] { value: T },
    struct None {},
    # TODO @mark: support skipping {} if no content?
}

# of existing types (must be structs or enums, not interface)
struct Apple {}
struct Mushroom {}
enum Produce {
    Apple,
    struct Banana {},
    enum Vegetable {},
    Option[Mushroom],
}

